{
  "compilerOptions": {
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
  },
  "exclude": ["dist","node_modules"]
}